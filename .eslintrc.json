{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "commonjs"
  },
  "rules": {
    "indent": ["error", 2],
    "no-console": "off",
    "no-var": "error",
    "no-warning-comments": "warn",
    "prefer-arrow-callback": "error",
    "prefer-const": "warn",
    "semi": "error"
  }
}
