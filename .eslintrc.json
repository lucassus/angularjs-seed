{
  "plugins": [
    "mocha"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "commonjs"
  },
  "rules": {
    "arrow-spacing": "error",
    "comma-dangle": "error",
    "comma-style": ["error", "last"],
    "comma-spacing": ["error", {
      "before": false,
      "after": true
    }],
    "complexity": "warn",
    "curly": "error",
    "eol-last": "error",
    "indent": ["error", 2],
    "key-spacing": ["error", {
      "beforeColon": false,
      "afterColon": true
    }],
    "keyword-spacing": "error",
    "max-len": ["error", 120],
    "no-console": "off",
    "no-multiple-empty-lines": "error",
    "no-shadow": "error",
    "no-trailing-spaces": "error",
    "no-var": "error",
    "no-warning-comments": "warn",
    "object-curly-spacing": ["error", "always"],
    "object-shorthand": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "warn",
    "semi": "error",
    "semi-spacing": ["error", {
      "before": false,
      "after": true
    }],
    "space-before-blocks": "error",
    "template-curly-spacing": ["error", "never"],
    "quotes": ["error", "single"]
  }
}
