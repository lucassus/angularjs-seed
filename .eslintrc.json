{
  "extends": [
    "eslint:recommended",
    "angular"
  ],
  "plugins": [
    "angular",
    "mocha",
    "promise"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 2],
    "prefer-arrow-callback": 1
  }
}
